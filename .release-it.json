{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "token": "${NPM_TOKEN}"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "token": "${GITHUB_TOKEN}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm lint", "pnpm test"],
    "before:release": "pnpm build"
  }
}